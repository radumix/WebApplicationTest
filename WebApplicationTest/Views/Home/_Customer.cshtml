@model List<WebApplicationTest.Models.Customer>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Customer Name</th>
                <th>Customer Email</th>
                <th>Customer Address</th>
                <th>&nbsp;</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.CustomerEmail</td>
                    <td>@customer.CustomerAddress</td>
                    <td>
                        <button class="btn btn-success" onclick="window.location.href='@Url.Action("Update", "Home", new { id = customer.Id })'">Update</button>
                    </td>
                    <td> <button id="showModalBtn" type="button" class="btn btn-danger" onclick="window.location.href='@Url.Action("Delete", "Home", new { id = customer.Id })'">Delete</button></td>
                </tr>
            }

        </tbody>
    </table>
</div>

